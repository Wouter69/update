
<StoreScreen>:

    name: 'store'
    BoxLayout:
        padding: dp(10)
        orientation: "vertical"
        pos_hint: {'center_X': .5}
        canvas.before:
            Rectangle:
                source: 'ASSETS/back/GameB.jpg'
                size: self.size
                pos: self.pos

        # -------------------------------------------------------
        # Watch 5 Gif
        # -------------------------------------------------------

        Image:
            id: zip
            source: "ASSETS/ad5.zip"
            anim_delay: .1
            size_hint: 1, .25


        # -------------------------------------------------------
        # PWatch 5 Tick Box
        # -------------------------------------------------------

        BoxLayout:
            spacing: dp(5)
            padding: dp(5)
            size_hint: 1, None
            height: dp(40)
            pos_hint: {'center_X': .5}

            Label:
                text: 'u'  # j
                font_name: "ASSETS/font/WINGDNG2.TTF"
                font_size: sp(25)
                pos_hint: {'center_X': .5}

            Label:
                text: 'v'  # k
                font_name: "ASSETS/font/WINGDNG2.TTF"
                font_size: sp(25)
                pos_hint: {'center_X': .5}

            Label:
                text: 'w'  # l
                font_name: "ASSETS/font/WINGDNG2.TTF"
                font_size: sp(25)
                pos_hint: {'center_X': .5}

            Label:
                text: 'm'  # x
                font_name: "ASSETS/font/WINGDNG2.TTF"
                font_size: sp(25)
                pos_hint: {'center_X': .5}

            Label:
                text: 'n'  # y
                font_name: "ASSETS/font/WINGDNG2.TTF"
                font_size: sp(25)
                pos_hint: {'center_X': .5}


        # -------------------------------------------------------
        # Spacing
        # -------------------------------------------------------

        Label:
            size_hint: 1, None
            height: dp(25)

        # -------------------------------------------------------
        # Play Video Button
        # -------------------------------------------------------

        Button:
            id: play_button
            size_hint: None, None
            width: dp(125)
            height: dp(125)
            pos_hint:{'center_x': .5, }
            background_color: 0,0,0,0

            on_press:
                root.play_on()

            on_release:
                root.play_off()

            Image:
                id: play_image
                source:'ASSETS/Buttons/OnPlay.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(125), dp(125)

        # -------------------------------------------------------
        # Play Video - Parts
        # -------------------------------------------------------

        Label:
            text: "Watch ads for a Pocket Cards"
            font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
            font_size: sp(16)
            color: 1,1,1,1
            size_hint: 1, .15

        # -------------------------------------------------------
        # Back Button
        # -------------------------------------------------------

        Button:
            id: back_button
            size_hint: None, None
            width: dp(40)
            height: dp(40)
            background_color: 0,0,0,0

            on_press:
                root.back_on()

            on_release:
                root.back_off()
                root.manager.transition = NoTransition()
                app.root.current = 'home'

            Image:
                id: back_image
                source: 'ASSETS/Buttons/OnBack.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(40), dp(40)
