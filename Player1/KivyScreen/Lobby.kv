
<LobbyScreen>:

    name: 'lobby'
    BoxLayout:
        padding: dp(10)
        spacing: dp(30)
        orientation: "vertical"
        canvas.before:
            Rectangle:
                source: 'ASSETS/back/GameB.jpg'
                size: self.size
                pos: self.pos

        # -------------------------------------------------------
        # Opponent - Icon and Name
        # -------------------------------------------------------

        BoxLayout:
            orientation: "vertical"
            size_hint: 1, None
            height: dp(150)

            Image:
                id: Icon_
                source: "ASSETS/PlayerIcon/SagittariusM.png"
                size_hint: 1, 3

            Label:
                id: Player
                text: '...'
                color: 1,1,1,1
                bold: True
                outline_color: 0,0,0,1
                outline_width: dp(3)
                font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                font_size: sp(25)
                size_hint: 1, 1

        # -------------------------------------------------------
        # VS - Graphic
        # -------------------------------------------------------

        Image:
            source: "ASSETS/back/VS.png"
            size_hint: 1, None
            height: dp(50)

        # -------------------------------------------------------
        # Player - Icon and Name
        # -------------------------------------------------------

        BoxLayout:
            orientation: "vertical"
            size_hint: 1, None
            height: dp(150)

            Image:
                id: Icon_
                source: "ASSETS/PlayerIcon/SagittariusM.png"
                size_hint: 1, 3

            Label:
                id: Player
                text: '...'
                color: 1,1,1,1
                bold: True
                outline_color: 0,0,0,1
                outline_width: dp(3)
                font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                font_size: sp(25)
                size_hint: 1, 1

        # -------------------------------------------------------
        # Back Button
        # -------------------------------------------------------

        Button:
            id: back_button
            size_hint: None, None
            width: dp(40)
            height: dp(40)
            background_color: 0,0,0,0

            on_press:
                root.back_on()

            on_release:
                root.back_off()
                root.manager.transition = NoTransition()
                app.root.current = 'home'

            Image:
                id: back_image
                source: 'ASSETS/Buttons/OnBack.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(40), dp(40)
