
<welcome>:

    size_hint: None, None
    size: dp(300), dp(550)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    auto_dismiss: False
    background: 'ASSETS/back/WelcomePopup.png'
    title: ""
    separator_height: dp(0)
    seperator_color: None

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(5)

        # -------------------------------------------------------
        # Welcome - Player Name
        # -------------------------------------------------------

        Label:
            id: WelcomeName
            text: 'Name of Player'
            color: 0,0,0,1
            font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
            font_size: sp(16)
            size_hint: 1, None
            height: dp(30)

        # -------------------------------------------------------
        # Welcome - Parts
        # -------------------------------------------------------

        Label:
            text: 'You currently rank at:'
            color: 0,0,0,1
            font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
            font_size: sp(16)
            size_hint: 1, None
            height: dp(30)

        # -------------------------------------------------------
        # Welcome - Player Ranking Position
        # -------------------------------------------------------

        Label:
            id: Rank
            text: 'Rank'
            color: 0,0,0,1
            font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
            font_size: sp(25)
            size_hint: 1, None
            height: dp(50)

        # -------------------------------------------------------
        # Welcome - Continue Button
        # -------------------------------------------------------

        Button:
            id: continue_button
            border: 0,0,0,0
            background_normal: 'ASSETS/Buttons/OnContinue.png'
            background_down: 'ASSETS/Buttons/OffContinue.png'
            size_hint: None, None
            width: dp(160)
            height: dp(40)
            pos_hint:{'center_x': .5, }

            # on_press:

            on_release:
                root.dismiss()

        # -------------------------------------------------------
        # Spacing
        # -------------------------------------------------------

        Label:
            size_hint: 1, None
            height: dp(175)
