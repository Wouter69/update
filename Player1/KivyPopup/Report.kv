
<Report>:

    size_hint: None, None
    size: dp(300), dp(550)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    auto_dismiss: False
    background: 'ASSETS/back/ReportPopup.png'
    title: ""
    separator_height: dp(0)
    seperator_color: None

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        pos_hint: {'center_X': .5}
        size_hint: 1, 1
        padding: dp(20), dp(20), dp(20), dp(20)

        # -------------------------------------------------------
        # Report - Parts
        # -------------------------------------------------------

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: dp(60)
            pos_hint: {'center_X': .5}

            Label:
                text: 'We are sorry you are'
                color: 0, 0, 0, 1
                font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                font_size: sp(18)
                size_hint: 1, None
                height: dp(30)
                pos_hint: {'center_X': .5}

            Label:
                text: 'having a problem'
                color: 0, 0, 0, 1
                font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                font_size: sp(18)
                size_hint: 1, None
                height: dp(30)
                pos_hint: {'center_X': .5}

        # -------------------------------------------------------
        # Report - Parts
        # -------------------------------------------------------

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: dp(80)
            pos_hint: {'center_X': .5}

            Label:
                text: 'Please provide some details on'
                color: 0, 0, 0, 1
                font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                font_size: sp(12)
                size_hint: 1, None
                height: dp(20)
                pos_hint: {'center_X': .5}

            Label:
                text: 'the problem you are having so'
                color: 0, 0, 0, 1
                font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                font_size: sp(12)
                size_hint: 1, None
                height: dp(20)
                pos_hint: {'center_X': .5}

            Label:
                text: 'we can make your gaming'
                color: 0, 0, 0, 1
                font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                font_size: sp(12)
                size_hint: 1, None
                height: dp(20)
                pos_hint: {'center_X': .5}

            Label:
                text: 'experience better'
                color: 0, 0, 0, 1
                font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                font_size: sp(12)
                size_hint: 1, None
                height: dp(20)
                pos_hint: {'center_X': .5}

        # -------------------------------------------------------
        # Report - Email
        # -------------------------------------------------------

        TextInput:
            id: Email
            hint_text: 'Your Email Address'
            hint_text_color: 0,0,0,1
            background_color: 190/255,147/255,97/255,.25
            font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
            font_size: sp(11)
            size_hint: .9, None
            height: dp(30)
            pos_hint: {'center_x': .5}

        # -------------------------------------------------------
        # Report - Body
        # -------------------------------------------------------

        TextInput:
            id: Body
            multiline: True
            hint_text: 'Note'
            hint_text_color: 0,0,0,1
            background_color: 190/255,147/255,97/255,.25
            font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
            font_size: sp(11)
            size_hint: .9, None
            height: dp(125)
            pos_hint: {'center_x': .5}

        # -------------------------------------------------------
        # Report - Submit Button
        # -------------------------------------------------------

        Button:
            id: submit_button
            size_hint: None, None
            width: dp(160)
            height: dp(40)
            pos_hint:{'center_x': .5,}
            background_color: 0,0,0,0

            on_press:
                root.submit_on()

            on_release:
                root.submit_off()
                Factory.ReportC().open()
                root.dismiss()

            Image:
                id: submit_image
                source:'ASSETS/Buttons/OnSubmit.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(160), dp(80)

        # -------------------------------------------------------
        # Back Button
        # -------------------------------------------------------

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: dp(40)
            spacing: dp(10)

            Button:
                id: back_button
                size_hint: None, None
                width: dp(40)
                height: dp(40)
                background_color: 0,0,0,0

                on_press:
                    root.back_on()

                on_release:
                    root.back_off()
                    root.dismiss()

                Image:
                    id: back_image
                    source: 'ASSETS/Buttons/OnBack.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: dp(40), dp(40)
