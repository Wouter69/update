
<Setting>:

    size_hint: None, None
    size: dp(300), dp(550)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    auto_dismiss: False
    background: 'ASSETS/back/SettingsPopup.png'
    title: ""
    separator_height: dp(0)
    seperator_color: None

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(15)
        pos_hint: {'center_X': .5}
        size_hint: 1, 1
        padding: dp(20), dp(20), dp(20), dp(20)

        # -------------------------------------------------------
        # Setting - Parts
        # -------------------------------------------------------

        BoxLayout:
            size_hint: .9,None
            height:dp(100)
            pos_hint: {'center_x': .5}

            BoxLayout:
                orientation: "vertical"
                size_hint: .5,None
                height:dp(100)
                padding: (dp(5), dp(5), dp(5), dp(5))
                spacing: dp(5)
                background_color: 190/255,147/255,97/255,.25
                canvas:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

                # -------------------------------------------------------
                # Setting - Sound Toggle Button
                # -------------------------------------------------------

                BoxLayout:
                    size_hint: 1,None
                    height:dp(40)

                    Label:
                        text: 'Sound'
                        color: 0,0,0,1
                        font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                        font_size: sp(14)
                        size_hint: .1, None
                        height: dp(40)

                    ToggleButton:
                        id: Sound_button
                        background_color: 190/255,147/255,97/255,1
                        text: 'on'
                        size_hint: None, None
                        width: dp(40)
                        height: dp(40)
                        # background_color: 0,0,0,1

                        on_state: root.on_sound_toggle_button_state(self)

                # -------------------------------------------------------
                # Setting - Music Toggle Button
                # -------------------------------------------------------

                BoxLayout:
                    size_hint: 1,None
                    height:dp(40)

                    Label:
                        text: 'Music'
                        color: 0,0,0,1
                        font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                        font_size: sp(14)
                        size_hint: .1, 1

                    ToggleButton:
                        id: Music_button
                        background_color: 190/255,147/255,97/255,1
                        text: 'on'
                        size_hint: None, None
                        width: dp(40)
                        height: dp(40)
                        # background_color: 0,0,0,0

                        on_state: root.on_music_toggle_button_state(self)

        # -------------------------------------------------------
        # Spacing
        # -------------------------------------------------------

        Label:
            size_hint: 1,None
            height:dp(5)

        # -------------------------------------------------------
        # Report - Parts and Button
        # -------------------------------------------------------

        BoxLayout:
            orientation: "vertical"
            size_hint: 1,None
            height: dp(100)

            Label:
                text: 'Do you have a problem?'
                color: 0,0,0,1
                font_name: "ASSETS/font/CelticGaramondthe2nd.TTF"
                font_size: sp(14)
                size_hint: 1, None
                height: dp(40)

            Button:
                id: report_button
                size_hint: None, None
                width: dp(160)
                height: dp(40)
                pos_hint:{'center_x': .5, }
                background_color: 0,0,0,0

                on_press:
                    root.report_on()

                on_release:
                    root.report_off()
                    Factory.Report().open()
                    root.dismiss()

                Image:
                    id: report_image
                    source:'ASSETS/Buttons/OnReport.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: dp(160), dp(80)

        # -------------------------------------------------------
        # Spacing
        # -------------------------------------------------------

        Label:
            size_hint: 1,None
            height:dp(20)

        # -------------------------------------------------------
        # Logout Button
        # -------------------------------------------------------

        Button:
            id: logout_button
            size_hint: None, None
            width: dp(160)
            height: dp(40)
            pos_hint:{'center_x': .5, }
            background_color: 0,0,0,0

            on_press:
                root.logout_on()

            on_release:
                root.logout_off()
                Factory.Logout().open()
                root.dismiss()

            Image:
                id: logout_image
                source:'ASSETS/Buttons/OnLogout.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(160), dp(80)

        # -------------------------------------------------------
        # Spacing
        # -------------------------------------------------------

        Label:
            size_hint: 1,None
            height:dp(20)

        # -------------------------------------------------------
        # Back Button
        # -------------------------------------------------------

        Button:
            id: back_button
            size_hint: None, None
            width: dp(40)
            height: dp(40)
            background_color: 0,0,0,0

            on_press:
                root.back_on()

            on_release:
                root.back_off()
                root.dismiss()

            Image:
                id: back_image
                source: 'ASSETS/Buttons/OnBack.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: dp(40), dp(40)
